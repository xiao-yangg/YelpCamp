<% layout('layouts/frontpage') %>

<header class="mb-auto">
    <div>
        <h3 class="float-md-left mb-1">YelpCamp</h3>
        <nav class="nav nav-masthead justify-content-center float-md-right">
            <a href="/" class="nav-link" aria-current="page">Home</a>

            <% if (!currentUser) {%>
                <a href="#" class="nav-link active">Login</a>
                <a href="/register" class="nav-link">Register</a>
                <% } else { %>
                    <a href="/logout" class="nav-link">Logout</a>
                    <% } %>
        </nav>
    </div>
</header>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card-shadow">
                <div class="card-body">
                    <h1 class="card-title mb-4">Log In!</h1>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <input class="form-control" type="text" id="username" name="username"
                                placeholder="Username" autofocus required> <%# autofocus! %>
                                <div class="invalid-feedback">
                                    Missing field!
                                </div>
                        </div>

                        <div class="mb-3">
                            <input class="form-control" type="password" id="password" name="password"
                                placeholder="Password" required>
                            <div class="invalid-feedback inline">
                                Missing field!
                            </div>
                        </div>

                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
