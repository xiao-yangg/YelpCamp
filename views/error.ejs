<%# Error Screen Template %>
<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error <%= err.statusCode %></h4>
            <p><%= err.message %></p>
            <hr>
            <% if (process.env.NODE_ENV !== "production") { %>
            <p><%= err.stack %></p> <%# hiding error stack from client after deployment %>
            <% } %>
        </div>
    </div>
</div>
